color14 = ${xrdb:color14:#bf000000}
color15 = ${xrdb:color15:#bf000000}

background = ${colors.color0}
background-alt = ${colors.color8}
transparency = ff
;background = #bf000000
;background-alt = #444
;foreground = ${xrdb:color7:#222}
foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/bottom]
bottom = true
width = 100%
height = 27
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

padding-left = 0
