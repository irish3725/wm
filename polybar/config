[colors]
;background = ${xrdb:color0:#222}
background = #cc222222
;background = #a3e8dc
background-alt = #444
;foreground = ${xrdb:color7:#222}
foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

workspace = #ff023b
date = #ccc
wifi = #ccc
battery = #ccc


[bar/top]
monitor = "DP2"
; bar dimensions
width = 100%
height = 22
fixed-center = true
background = ${colors.background}
foreground = ${colors.foreground}
padding-left = 2
padding-right = 2
module-margin-left = 1
module-margin-right = 2 

;bar fonts
font-0 = fixed:pixelsize=10;1
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = siji:pixelsize=10;1
font-3 = inconsolata:pixelsize=10;1
font-4 = FontAwesome:size=10;1
font-5 = "Font Awesome 5 Free:style=Regular:pixelsize=8"
font-6 = "Font Awesome 5 Free:style=Solid:pixelsize=8"
font-7 = "Font Awesome 5 Brands:style=Regular:pixelsize=8"
font-8 = "Weather Icons:style=Regular:pixelsize=8"
font-9 = "Material Icons:style=Regular:pixelsize=8"

modules-left = i3
modules-center = date
modules-right = weather wlan battery


;wm-restack = i3

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

label-mode-padding = 2
label-mode-foreground = ${colors.workspace}
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %index%

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%

; visible = Active workspace on unfocused monitor
label-visible = %index%

; urgent = Workspace with urgency hint set
label-urgent = %index%

[module/wlan]
type = internal/network
interface = wlp1s0
interval = 3.0

format-connected =  <label-connected>
;format-connected-foreground = #ab00ff
format-connected-foreground = ${colors.wifi}
label-connected = %essid%

format-disconnected = <label-disconnected>
label-disconnected = %ifname% disconnected

[module/date]
type = internal/date
interval = .5

format-foreground = ${colors.date}
;format-foreground = #14cc6f
;format-date-foreground = ${colors.wifi}
date = "%a %b %d"
time = %I:%M:%S

;label = %{t8}%{T-}  %date%, %time%
label = %date%, %time%

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

format-charging =  <label-charging>

format-discharging-foreground = ${colors.battery}
format-discharging = <ramp-capacity> <label-discharging>

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

[settings]
screenchange-reload = true

[global/wm]
margin-top = 5
margin-bottom = 5

; vim:ft=dosini

;[module/cpu]
;type = internal/cpu
;interval = 2
;format-prefix = " "
;format-prefix-foreground = ${colors.foreground-alt}
;format-underline = #f90000
;label = %percentage:2%%

;[module/memory]
;type = internal/memory
;interval = 2
;format-prefix = " "
;format-prefix-foreground = ${colors.foreground-alt}
;format-underline = #4bffdc
;label = %percentage_used%%

[module/weather]
type = custom/script
exec = ~/.config/polybar/modules/forecast/polybar-forecast
interval = 600
label-font = 3


